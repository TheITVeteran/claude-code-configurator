{
  "name": "code-assistant-config-interface",
  "version": "1.0.8",
  "description": "CACI (Code Assistant Configuration Interface) - Intelligent CLI tool for configuring Claude Code projects",
  "main": "dist/index.js",
  "bin": {
    "caci": "./bin/caci"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --reporters=default --reporters=jest-junit",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:e2e": "jest --testPathPattern=e2e --runInBand",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lint": "eslint src/ tests/ --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src/ tests/ --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\" \"tests/**/*.{ts,tsx,js,jsx,json}\" \"*.{json,md,yml,yaml}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\" \"tests/**/*.{ts,tsx,js,jsx,json}\" \"*.{json,md,yml,yaml}\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test",
    "prepare": "npm run build",
    "prepublishOnly": "npm run validate",
    "preversion": "npm run validate",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "clean": "rm -rf dist coverage node_modules/.cache",
    "audit:fix": "npm audit fix",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "size": "npm pack --dry-run",
    "analyze": "node dist/index.js analyze",
    "configure": "node dist/index.js configure",
    "benchmark": "node -e \"console.time('startup'); require('./dist/index.js'); console.timeEnd('startup')\"",
    "docker:build": "docker build -t caci .",
    "docker:run": "docker run --rm -v $(pwd):/workspace -w /workspace caci",
    "release:patch": "npm version patch",
    "release:minor": "npm version minor",
    "release:major": "npm version major",
    "release:beta": "npm version prerelease --preid=beta"
  },
  "keywords": [
    "caci",
    "code-assistant",
    "configuration",
    "claude",
    "cli",
    "automation"
  ],
  "author": "Elad Benhaim",
  "license": "MIT",
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.0.0",
    "eslint-plugin-node": "^11.0.0",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@langchain/core": "^0.3.72",
    "@langchain/google-genai": "^0.2.16",
    "chalk": "^4.1.2",
    "commander": "^14.0.0",
    "inquirer": "^8.2.0",
    "zod": "^4.0.17"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md"
  ]
}
